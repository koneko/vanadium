---
import CenteredContainer from "../components/CenteredContainer.astro";
import Layout from "../layouts/Layout.astro";
import Search from "../components/Search.astro";
let from = Astro.url.searchParams.get("from");
---

<Layout name="Anime Not Found">
	<CenteredContainer>
		<h1>Anime Not Found</h1>
		<p>The anime (AnimeID: "{from}") you are looking for does not exist in the database.</p>
		<a href="/">Go back to home</a>
	</CenteredContainer>
</Layout>

<style>
	h1 {
		font-size: 2rem;
		margin-bottom: 1rem;
		text-align: center;
		color: white;
	}
	p {
		color: white;
		text-align: center;
	}
	a {
		display: block;
		text-align: center;
		color: white;
		margin-top: 1rem;
	}
</style>
