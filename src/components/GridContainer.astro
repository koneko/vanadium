	.container {
		width: 75%;
		display: grid;
		/* grid-template-columns: repeat(auto-fill, minmax(333px, 1fr)); */
		/* max of 333px per element */
		grid-template-columns: repeat(auto-fill, minmax(333px, 1fr));
		grid-gap: 40px;
