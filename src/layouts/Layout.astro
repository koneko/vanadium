---
import Search from "../components/Search.astro";
---

<style is:global>
	:root {
		--accent: #ef4958;
		--header-bg: #0f1923;
	}
	* {
		font-family: Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	html,
	body {
		height: 100%;
		background-color: #000000;
	}
	main {
		padding: 0.5rem;
		background-color: #f5f5f5;
		min-height: calc(100vh - 4.21rem);
		display: flex;
		justify-content: center;
		align-items: center;
		background-color: #000000;
	}
	header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 1rem;
		background-color: var(--header-bg);
		color: var(--accent);
	}
	h2 {
		cursor: pointer;
	}

	.left {
		display: flex;
		align-items: center;
	}

	.right {
		display: flex;
		align-items: center;
	}
</style>

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{Astro.props.name} | Vanadium</title>
	</head>
	<body>
		<header>
			<div class="left">
				<h2>Vanadium</h2>
			</div>
			<div class="right">
				<Search />
			</div>
		</header>
		<main>
			<slot />
		</main>
	</body>
</html>

<script>
	document.querySelector("h2").addEventListener("click", () => {
		location.href = "/";
	});
</script>
